BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '7'
            font_size: 48
            on_text: app.handle_calculate(self.text)

        Label:
            id: output_label
            font_size: 48
            color: (255, 0, 255, 1)


        BoxLayout:

            Button:
                text: "up"
                on_press: app.handle_increment(1)
            Button:
                text: "down"
                on_press: app.handle_increment(-1)

    Label:
        text: 'enter miles'

